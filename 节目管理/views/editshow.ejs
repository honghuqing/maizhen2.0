<!doctype html>
<html lang="en">
<head>
<meta charset="utf-8">
<title>脉诊之道</title>
<meta name="description" content="">
<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1">
<link rel="stylesheet" href="/css/bootstrap.css">
<link rel="stylesheet" href="/css/login.css">
<link href="/stylesheets/style.css" rel="stylesheet" />
</head>
<body>
<div class="container">
	<%include header%>
	<div class="col-lg-12 main">
			<div class="col-lg-12" style="padding:0px">
				<h4 style="border-bottom:1px solid #aaa;padding:10px 0px;margin:0px;margin-bottom:10px">添加节目
			</h4>
				<div class="col-lg-12" style="padding:30px 0px 0px 40px">
					<form role="form" action="/updateshow" method="post" enctype="multipart/form-data" onsubmit="return check(this)">
						<div class="form-group">
							<label>标题:</label>
							<input type="text" name="title" value="<%=data.title%>" class="form-control" id="exampleInputEmail1" style="margin-left:20px">
						</div>
						<div class="form-group">
							<label>所属专辑:</label>
							<select name="special" class="form-control">
								<option value="0">选择专辑
								<%special.forEach(function(spe){%>
									<option value="<%=spe._id%>" /><%=spe.title%>
								<%})%>
							</select>
						</div>
						<div class="form-group">
							<label>地址:</label>
							<input type="text" name="url" value="<%=data.url%>" class="form-control" id="exampleInputEmail1" style="margin-left:20px">
						</div>
						<div class="form-group">
						    <label for="exampleInputFile">图片:</label>
						    <input type="file" id="exampleInputFile" name="picture" style="margin-left:20px;display:inline">
							<input type="hidden" name="oldpicture" value="<%=data.picture%>" />
						    <img src="/uploads/<%=data.picture%>" height="100" width="100" />
						</div>
						<div class="form-group">
							<label for="desc" style="float:left">简介:</label>
							<textarea id="desc" name="desc" class="col-lg-8 form-control" style="margin-left:20px"><%=data.desc%></textarea>
						</div>
						<div class="form-group col-lg-10">
							<input type="hidden" name="id" value="<%=data._id%>" />
							<button type="submit" class="btn btn-info" style="margin:20px 0px 0px 36px">Submit</button>
						</div>
						
					</form>
					<script type="text/javascript">
						function check(obj){
							if(obj.special.value == 0){
								alert('请选择节目所属专辑');
								return false;
							}
						}
					</script>
				</div>
			</div>		
		<div class="col-lg-8"></div>
	</div>
</div>
<script src="/javascripts/jquery.js"></script>
<script src="/javascripts/check.js"></script>
</body>
</html>
